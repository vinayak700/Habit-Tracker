<link rel="stylesheet" href="/css/header.css">

<div class="nav">
    <div class="title">
        <a href="/">Habit Tracker</a>

    </div>

    <% if (locals.user){ %>
        <div class="userPresent">
            <button class="btn btn-secondary my-3 rounded-pill" onclick="openForm()">+ Add Habit</button>
            <div class="nameOfUser">
                <%= user.name%>
            </div>
            <hr>
            <div class="logOut"> <a href="/users/sign-out"> <i class="fa fa-light fa-arrow-right-from-bracket"
                        style="color: #ffffff;"></i> </a> </div>
        </div>
        <%} else { %>
            <div class="noUser">
                <ul>
                    <li> <a href="/users/sign-in"> Sign In </a> </li>
                    <hr>
                    <li> <a href="/users/sign-up"> Sign Up </a> </li>
                </ul>
            </div>

            <%}%>

</div>